{
  "name": "list",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "build:client": "parcel build ./src/client/index.html --target browser --out-dir=./dist/client",
    "build:server": "parcel build ./src/server/index.ts --target node",
    "build": "run-p -l build:server build:client",
    "lint": "eslint \"*/**/*.{ts,tsx}\" --fix",
    "start": "cross-env NODE_ENV=dev run-p -rl tsc tsnd",
    "tsnd": "tsnd --transpile-only ./src/server/index.ts",
    "tsc": "tsc --pretty --noEmit --watch",
    "test": "jest --forceExit --detectOpenHandles"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-p -l lint test"
    }
  },
  "dependencies": {
    "@apollo/client": "^3.0.0-beta.37",
    "@apollo/link-error": "^2.0.0-beta.3",
    "@apollo/link-ws": "^2.0.0-beta.3",
    "apollo-server-express": "^2.10.1",
    "components": "^0.1.0",
    "cross-fetch": "^3.0.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^14.6.0",
    "graphql-subscriptions": "^1.1.0",
    "parcel-bundler": "1.12.4",
    "ramda": "^0.27.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-is": "^16.12.0",
    "subscriptions-transport-ws": "^0.9.16",
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "@prisma/cli": "^2.0.0-beta.3",
    "@prisma/client": "^2.0.0-beta.3",
    "@types/classnames": "^2.2.10",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/express": "^4.17.2",
    "@types/jest": "^25.1.2",
    "@types/node": "^13.7.2",
    "@types/parcel-bundler": "^1.12.1",
    "@types/ramda": "^0.26.41",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/uuid": "^3.4.7",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "autoprefixer": "^9.8.4",
    "classnames": "^2.2.6",
    "cross-env": "^7.0.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.36",
    "prettier": "^1.19.1",
    "tailwindcss": "^1.4.6",
    "ts-jest": "^25.2.0",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.44"
  }
}
